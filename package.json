{
  "name": "custom-paymaster",
  "private": true,
  "scripts": {
    "compile": "hardhat compile",
    "copy": "npm run compile && copyfiles -f artifacts/contracts/**/*.json contracts/abi/",
    "start": "tsx src/index.ts",
    "verify": "TS_NODE_PROJECT=tsconfig.hardhat.json npx hardhat verify --network $NETWORK $ADDRESS --contract contracts/$CONTRACT.sol:$CONTRACT",
    "verify:contract": "./scripts/verify.sh",
    "verify:direct": "TS_NODE_PROJECT=tsconfig.hardhat.json npx hardhat verify"
  },
  "dependencies": {
    "@account-abstraction/contracts": "0.7.0",
    "@fastify/cors": "^9.0.1",
    "@openzeppelin/contracts": "^5.1.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.4.7",
    "fastify": "^4.26.2",
    "permissionless": "^0.1.0",
    "tslib": "2.6.2",
    "typescript": "5.4.2",
    "viem": "2.14.1",
    "zod": "^3.22.4",
    "zod-validation-error": "^3.0.3"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@types/node": "20.12.4",
    "hardhat": "^2.22.17",
    "ts-node": "^10.9.2",
    "tsx": "4.9.1"
  }
}
